@model LuxRentals.ViewModels.Profile.CustomerProfileViewModel
@{
    ViewData["Title"] = "Customer Profile";
}

<h1>Customer Profile</h1>

<p><strong>Username:</strong> @Model.UserName</p>
<p><strong>Email:</strong> @Model.Email</p>

<hr />

<p><strong>First Name:</strong> @Model.FirstName</p>
<p><strong>Last Name:</strong> @Model.LastName</p>
<p><strong>Phone:</strong> @Model.PhoneNumber</p>
<p><strong>Driver Licence #:</strong> @Model.DriverLicenceNo</p>
<p>
    <strong>Licence Verified:</strong>
    @(Model.LicenceVerified == null ? "Unknown" : (Model.LicenceVerified.Value ? "Yes" : "No"))
</p>
